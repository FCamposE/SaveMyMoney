<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SaveMyMoney"
        android:textColor="@color/white"
        android:fontFamily="@font/inria_sans_bold"
        android:textSize="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/tvParagraph"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Gestiona tus gastos e ingresos de manera rÃ¡pida y sencilla"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:fontFamily="@font/inria_sans_light"/>
    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:src="@drawable/floopa"
        app:layout_constraintTop_toBottomOf="@+id/tvParagraph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>