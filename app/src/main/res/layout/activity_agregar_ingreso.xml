<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarIngresoActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbIngresos"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agrega un nuevo ingreso"
        android:gravity="center"
        android:textSize="24sp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etTipoIngreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Tipo de ingreso"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etPrecioIngreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Precio"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etFechaIngreso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:focusable="false"
            android:clickable="true"
            android:hint="Fecha"
            android:inputType="none" />

        <Button
            android:id="@+id/btnSeleccionarFechaIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha" />
    </LinearLayout>

    <EditText
        android:id="@+id/etmlDescripcionIngreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="Agregue la descripcion"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnAgregarIngreso"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Agregar Ingreso"
        android:layout_marginBottom="16dp" />

</LinearLayout>
